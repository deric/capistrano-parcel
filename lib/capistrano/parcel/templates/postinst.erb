#!/bin/sh

set -e

APP_NAME=<%= fetch(:application) %>

case "$1" in
    configure)
        <% fetch(:deb_postinst).each do |line| %>
        <%= line %>
        <% end unless fetch(:deb_postinst).nil? %>
        ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac
