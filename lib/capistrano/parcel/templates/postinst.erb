#!/bin/sh

set -e

APP_NAME=<%= fetch(:application) %>

case "$1" in
    configure)
        <% deb_postinst.each do |line| -%>
        <%= line %>
        <% end -%>
        ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac
